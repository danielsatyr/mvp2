generator client {
  provider = "prisma-client-js"
 // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  // Relación 1–1 con Profile
  profile   Profile?
}

model Occupation {
  id                      Int     @id @default(autoincrement())
  occupationId            String  @unique             // tu occupation_id del Excel
  name                    String
  anzscoCode              String  @map("anzsco_code")
  skillAssessmentBody     String  @map("skill_assessment_body")
  mltsslFlag              Boolean @map("mltssl_flag")
  stsolFlag               Boolean @map("stsol_flag")
  rolFlag                 Boolean @map("rol_flag")
  subclass190             Boolean @map("190")
  subclass189Pt           Boolean @map("189 (PT)")
  subclass186             Boolean @map("186")
  subclass491St           Boolean @map("491(S/T)")
  subclass491F            Boolean @map("491 (F)")
}

model Profile {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      @unique

  // Campos de formulario (ajusta nombres y tipos según tu caso)
   age             Int
  occupation      String
  englishLevel    String
  workExperience_in  Int
  workExperience_out Int
  nationality     String
  education_qualification String
  study_requirement String
  regional_study    String
  professional_year String
  natti            String
  partner          String
  nomination_sponsorship String

  // Score calculado
  score           Int

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}